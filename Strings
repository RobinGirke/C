#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main(void){

    char string[50];
    char ziffer[] = "1234567890";
    char vokal[] = "aeiou";
    int nUpper = 0, nLower = 0, nZiffer = 0, nVokal = 0;

    printf("Bitte geben Sie eine Zeichenkette ein: \n");
    scanf("%s",&string);
    int laenge = strlen(string);

    for(int i=0 ; i<laenge; i++){
            if(isupper(string[i])){//Abfrage der Grossbuchstaben
                nUpper++;
            }
            if(islower(string[i])){//Abfrage der Kleinbuchstaben
                nLower++;
            }
            if(string[i]=='0' || string[i]=='1'|| string[i]=='2'|| string[i]=='3'|| string[i]=='4'|| string[i]=='5'|| string[i]=='6'|| string[i]=='7'|| string[i]=='8'|| string[i]=='9'){// Abfrage der Ziffern
                nZiffer++;
            }
            char ch = tolower(string[i]); // Damit auch groÃŸ A etc erkannt werden, spart Schreibarbeit
            if( string[i]=='a'|| string[i]=='e'|| string[i]=='i'|| string[i]=='o'|| string[i]=='u'){//Abfrage der Vokale
                nVokal++;
                }
            }


    printf("Anzahl Grossbuchstaben: %d\n", nUpper);
    printf("Anzahl Kleinbuchstaben: %d\n", nLower);
    printf("Anzahl Ziffern: %d\n", nZiffer);
    printf("Anzahl Vokale: %d\n", nVokal);

    }
