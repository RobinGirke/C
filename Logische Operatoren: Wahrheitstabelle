

#include <stdio.h>

int main(void)
    {
     int a,b,c,d;
     printf ("  | A | B | C | D | E = A -> B | G = E <-> (NOT C) | H = B OR A | I = D->H | F |\n -+---+---+---+---+------------+-------------------+------------+----------+---+-\n");
    for (int i=0;i<=15;i++){
        a=i>>3&1u;
        b=i>>2&1u;
        c=i>>1&1u;
        d=i&1u;
        printf("  |%d  |%d  |%d  |%d",a,b,c,d);  // hier alle drei aussagen in einem printbefehl, die Ã¼brigen dann in einzlenen printf befehlen aufgund von lesbarkeit
        printf("  |%12d",!a||b);
        printf("|%19d|",!a||b ==!c);
        printf("%12d|",b || a);
        printf("%10d|",!d || b || a);
        printf("%3d|",(!a||b)==!c && (!d || b || a));
        printf("\n");

    }
}
